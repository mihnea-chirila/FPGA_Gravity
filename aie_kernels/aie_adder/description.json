{
    "name": "AIE Adder ", 
    "description": [
        "This simple example demonstrate the flow to create aie Kernel and how to connect aie Kernel to PL Kernels and validate the design running on the AI Engine."
    ],
    "flow": "versal",
    "keywords": [
        "aiecompiler", 
        "aiesimulator",
        "stream_connect"
    ], 
    "key_concepts": [
        "AI Engine", 
        "Adaptive Data Flow", 
        "Graph"
    ],
    "platform_allowlist": [
        "vck190"
    ],
    "platform_blocklist": [
        "zc",
        "aws-vu9p-f1",
        "samsung",
        "u2_",
        "vck5000",
        "dma"
    ],
    "os": [
        "Linux"
    ], 
    "runtime": [
        "OpenCL"
    ], 
    "host": {
       "host_exe": "aie_adder",
        "compiler": {
            "sources": [
                "REPO_DIR/common/includes/xcl2/xcl2.cpp",
                "./src/sw/host.cpp",
                "./Work/ps/c_rts/aie_control_xrt.cpp"
            ], 
            "includepaths": [
                "REPO_DIR/common/includes/xcl2",
                "$(SYSROOT)/usr/include/xrt/", 
                "./src/aie"                
            ],
            "options": "--sysroot=$(SYSROOT)"
        },
        "linker": {
            "librarypaths": [
                "$(SYSROOT)/usr/lib/",
                "xaiengine",
                "adf_api_xrt",
                "xrt_core",
                "xrt_coreutil",
                "${XILINX_VITIS}/aietools/lib/aarch64.o"
            ],
            "options": "--sysroot=$(SYSROOT)"
        }
    },
    "aiecompiler": {
        "compiler": {
            "includepaths": [
                "./src/aie"
            ]
        }
    },
    "aiecontainers": [
        {
            "accelerators": [
                {
                    "location": "./src/aie/graph.cpp",
                    "pl-freq": 100,
                    "workdir": "./Work",
                    "name": "libadf.a",
                    "aie_kernel_files":["./src/aie/adder.cc"]
                }
            ]
        }
    ],
    "data": [
        "PROJECT/data/golden.txt",
        "PROJECT/data/input0.txt",
        "PROJECT/data/input1.txt"
    ],
    "v++": {
        "linker": {
                    "cflags": [
                        "--config PROJECT/system.cfg"
                    ]
                },
        "package": {
                    "cflags": [
                        "--package.defer_aie_run"
                    ]
                }
     },
    "match_makefile" : "false",
    "containers": [
        {
            "accelerators": [
                {
                    "name": "pl_mm2s", 
                    "location": "src/pl_kernels/mm2s.cpp",
                    "num_compute_units": "2"
                }, 
                {
                    "name": "pl_s2mm", 
                    "location": "src/pl_kernels/s2mm.cpp"
                } 
            ], 
            "name": "krnl_adder"
        }
    ],
    "config_make" : "./system.cfg",
    "launch": [
        {
            "name": "generic launch for all flows"
        }
    ],
    "contributors": [
        {
            "url": "http://www.xilinx.com", 
            "group": "Xilinx"
        }
    ],
    "testinfo": {
        "disable": false,
        "jobs": [
            {
                "index": 0,
                "dependency": [],
                "env": "",
                "cmd": "",
                "max_memory_MB": 32768,
                "max_time_min": 300
            }
        ],
        "targets": [
            "vitis_sw_emu",
            "vitis_hw_emu",
            "vitis_hw"
        ],
        "category": "canary"
    }
}
