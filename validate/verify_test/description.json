{
    "name": "Verify Kernel (C)", 
    "description": [
        "This is a simple design to verify that the platform has basic functionality."
    ],
    "flow": "vitis",
    "os": [
        "Linux"
    ], 
    "runtime": [
        "OpenCL"
    ],
    "platform_blocklist": [
        "zc",
        "vck190",
        "2019",
        "2018"
    ],
    "platform_type": "pcie",
    "gui": false,        
    "host": {
        "compiler": {
            "sources": [
                "REPO_DIR/common/includes/xcl2/xcl2.cpp",
                "./src/host.cpp"
            ], 
            "includepaths": [
                "REPO_DIR/common/includes/xcl2"
            ]
        },
        "linker" : {
            "libraries" : [
                "boost_filesystem",
                "boost_system"
            ]
        }, 
        "host_exe": "validate.exe"
    },    
    "match_makefile": "false",
    "containers": [
        {
            "accelerators": [
                {
                    "name": "verify", 
                    "location": "src/verify.cpp"
                } 
            ], 
            "name": "verify"
        }
    ],
    "config_make": "config.mk",        
    "launch": [
        {
            "cmd_args": "-p $(GEN_DIR)", 
            "name": "generic launch for all flows"
        }
    ], 
    "contributors": [
        {
            "url": "http://www.xilinx.com", 
            "group": "Xilinx"
        }
    ],
    "testinfo": {
        "profile": "no",
        "disable": false,
        "jobs": [
            {
                "index": 0,
                "dependency": [],
                "env": "",
                "cmd": "",
                "max_memory_MB": 32768,
                "max_time_min": 300
            }
        ],
        "targets": [
            "vitis_sw_emu",
            "vitis_hw_emu",
            "vitis_hw"
        ],
        "category": "canary"
    }
}
