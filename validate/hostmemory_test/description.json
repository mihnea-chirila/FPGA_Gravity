{
    "name": "Host Memory Test(C)", 
    "description": [
        "This host memory design explains how direct host memory access can be done by the kernel."
    ],
    "flow": "vitis",
    "keywords": [
        "XCL_MEM_EXT_HOST_ONLY",
        "HOST[0]"
        ],
    "key_concepts": [
        "host memory", 
        "address translation unit" 
    ],
    "platform_type": "pcie",
    "platform_blocklist": [ 
        "zc",
        "vck",
        "aws-vu9p-f1_shell",
        "2019",
        "2018",
        "u2_",
        "u25_",
        "u30",
        "u50lv",
        "u50_gen3x4" 
    ],
    "os": [
        "Linux"
    ], 
    "runtime": [
        "OpenCL"
    ],
    "gui": false,    
    "host": {
        "compiler": {
            "sources": [
                "REPO_DIR/common/includes/xcl2/xcl2.cpp",
                "./src/host.cpp"
            ], 
            "includepaths": [
                "REPO_DIR/common/includes/xcl2"
            ]
        },
        "linker" : {
            "libraries" : [
                "boost_filesystem",
                "boost_system"
            ]
        }, 
        "host_exe": "hostmemory.exe"
    },
    "match_makefile": "false",
    "containers": [
        {
            "accelerators": [
                {
                    "name": "hostmemory", 
                    "location": "src/hostmemory.cpp"
                } 
            ], 
            "name": "hostmemory"
        }
    ],
    "config_make": "config.mk",
    "launch": [
        {
            "cmd_args": "-p $(GEN_DIR)", 
            "name": "generic launch for all flows"
        }
    ], 
    "contributors": [
        {
            "url": "http://www.xilinx.com", 
            "group": "Xilinx"
        }
    ],
   "testinfo": {
        "profile": "no",
        "disable": false,
        "jobs": [
            {
                "index": 0,
                "dependency": [],
                "env": "",
                "cmd": "",
                "max_memory_MB": 32768,
                "max_time_min": 300
            }
        ],
        "targets": [
            "vitis_sw_emu",
            "vitis_hw_emu",
            "vitis_hw"
        ],
        "category": "canary"
    }
}
